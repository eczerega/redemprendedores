= form_for @mature do |f|
  - if @mature.errors.any?
    #error_explanation
      %h2= "#{pluralize(@mature.errors.count, "error")} prohibited this mature from being saved:"
      %ul
        - @mature.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :idea_id
    = f.number_field :idea_id
  .actions
    = f.submit 'Save'
